{    
    "configurations": [
        
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",               
                "${workspaceFolder}/../../**"                                              
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "browse": {
                "path": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../../**"                 
                ]
            },
            "compilerPath": "${workspaceFolder}/../../bin/ez80-clang.exe", 
           // "compilerArgs": ["-I${workspaceFolder}/src_fatfs"],           
            "cStandard": "gnu17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "windows-clang-x86",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}